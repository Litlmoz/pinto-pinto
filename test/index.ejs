      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.1/socket.io.min.js.map"
    ></script>
    <script
      defer
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.1/socket.io.min.js"
